contract ArbitragerOptimismPair is IERC3156FlashBorrower {
    IERC3156FlashLender public immutable lender;
    struct Data {
        address token1;
        address token2;
        address pool1;
        address pool2;
        uint256 deadline;
        uint256 amountRequired;
    }
    constructor(IERC3156FlashLender _lender)
    {
        lender = _lender;
    }

    function onFlashLoan(
        address initiator,
        address borrowedToken,
        uint256 amount,
        uint256 fee,
        bytes calldata data
    ) external override returns (bytes32) {
        require(msg.sender == address(lender), 'FLASH_BORROWER_UNTRUSTED_LENDER');

        IERC20 borrowedTokenContract = IERC20(borrowedToken);
        Data memory decodedData = _decodeData(data);

        uint256 amountReceivedSwapToken = _swap(
            decodedData.pool1,
            decodedData.token1,
            decodedData.token2,
            amount,
            initiator,
            fee,
            decodedData.deadline
        );

        uint256 amountReceivedBorrowedToken = _swap(
            decodedData.pool2,
            decodedData.token2,
            decodedData.token1,
            amountReceivedSwapToken,
            initiator,
            fee,
            decodedData.deadline
        );

        // Check profitability
        uint256 repay = amount + fee;
        uint256 minAmountForProfitability = repay + decodedData.amountRequired;
        require(
            amountReceivedBorrowedToken > minAmountForProfitability,
            'ARBITRAGER_NO_PROFITABILITY'
        );

        // Transfer profit
        borrowedTokenContract.transfer(
            initiator,
            amountReceivedBorrowedToken - minAmountForProfitability
        );

        // Approve lender
        borrowedTokenContract.approve(address(lender), repay);

        return keccak256('ERC3156FlashBorrower.onFlashLoan');
    }

    function _decodeData(bytes calldata data) internal pure returns (Data memory) {
        (
        address pool1,
        address pool2,
        address token1,
        address token2,
        uint256 deadline,
        uint256 amountRequired
        ) = abi.decode(data, (address, address, address, address, uint256, uint256));
        return Data(pool1, pool2, token1, token2, deadline, amountRequired);
    }

    function _swap(
        address pair,
        address token1,
        address token2,
        uint256 amount,
        address to,
        uint256,
        uint256
    ) internal returns (uint256) {
        (address token0, ) = _sortTokens(token1, token2);
        uint256 amount0Out;
        uint256 amount1Out;
        uint256 amountOut;
        {
            // compute amount out
            (uint256 reserve0, uint256 reserve1, ) = IUniswapV2Pair(pair).getReserves();
            (reserve0, reserve1) = token1 == token0 ? (reserve0, reserve1) : (reserve1, reserve0);
            amountOut = _getAmountOut(amount, reserve0, reserve1);

            // compute amount0Out and amount1Out
            (amount0Out, amount1Out) = token1 == token0 ? (uint256(0), amountOut) : (amountOut, uint256(0));
        }

        IERC20(token1).transfer(pair, amount);
        IUniswapV2Pair(pair).swap(amount0Out, amount1Out, to, new bytes(0));

        return amountOut;
    }

    function _getAmountOut(
        uint256 amountIn,
        uint256 reserveIn,
        uint256 reserveOut
    ) internal pure returns (uint256 amountOut) {
        require(amountIn > 0, 'UniswapV2Library: INSUFFICIENT_INPUT_AMOUNT');
        require(reserveIn > 0 && reserveOut > 0, 'UniswapV2Library: INSUFFICIENT_LIQUIDITY');
        uint256 amountInWithFee = amountIn * 997;
        uint256 numerator = amountInWithFee * reserveOut;
        uint256 denominator = reserveIn * 1000 + amountInWithFee;
        amountOut = numerator / denominator;
    }

    function _sortTokens(address tokenA, address tokenB) internal pure returns (address token0, address token1) {
        require(tokenA != tokenB, 'UniswapV2Library: IDENTICAL_ADDRESSES');
        (token0, token1) = tokenA < tokenB ? (tokenA, tokenB) : (tokenB, tokenA);
        require(token0 != address(0), 'UniswapV2Library: ZERO_ADDRESS');
    }
}

