import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "../RubiconMarket.sol";
import "../libraries/TransferHelper.sol";
import "../interfaces/ISwapRouter.sol";

contract StrategistUtility {
    address public RubiconMarketAddr;
    bool public initialized;
    uint24 public takeFee; //BPS
    address public admin;
    ISwapRouter public swapRouter;

    // Proxy-safe constructor
    /// @notice msg.sender must approve this contract
    //Optimism UNI Router: 0xE592427A0AEce92De3Edee1F18E0157C05861564
    function initialize(address thisChainRMAddr, address thisChainUNIRouter)
        external
    {
        require(!initialized);
        swapRouter = ISwapRouter(thisChainUNIRouter);
        RubiconMarketAddr = thisChainRMAddr;
        admin = msg.sender;
        takeFee = 20; //Rubicon take Fee
        initialized = true;
    }

    modifier onlyAdmin() {
        require(msg.sender == admin);
        _;
    }

    /// @notice swapExactInputSingle swaps a fixed amount of swapThis for a maximum possible amount of forThis
    /// using the swapThis/forThis 0.3% pool by calling `exactInputSingle` in the swap router.
    /// @dev The calling address must approve this contract to spend at least `amountIn` worth of its tokens.
    /// @param amountIn The exact amount of swapThis that will be swapped for forThis.
    /// @return amountOut The amount of forThis received.
    function UNIdump(
        uint256 amountIn,
        address swapThis,
        address forThis,
        uint256 hurdle,
        uint24 _poolFee,
        address to // resulting destination that recieves the result of the swap
    ) public returns (uint256) {
        // Approve the router to spend swapThis if needed.
        // if (
        //     ERC20(swapThis).allowance(address(this), address(swapRouter)) == 0
        // ) {
        TransferHelper.safeApprove(swapThis, address(swapRouter), amountIn);
        // }
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: swapThis,
                tokenOut: forThis,
                fee: _poolFee,
                recipient: to,
                deadline: block.timestamp,
                amountIn: amountIn,
                amountOutMinimum: hurdle,
                sqrtPriceLimitX96: 0
            });

        // The call to `exactInputSingle` executes the swap.
        uint256 amountOut = swapRouter.exactInputSingle(params);

        // ERC20(forThis).transfer(to, amountOut);
        return amountOut;
    }

    //trade utility to easily execute a Rubicon trade
    function RBCNtrade(
        uint256 amountIn,
        address swapThis,
        address forThis,
        uint256 minFillAmt
    ) internal returns (uint256) {
        // If needed, approve the asset for trade on Rubicon Market
        if (
            ERC20(swapThis).allowance(
                address(this),
                address(RubiconMarketAddr)
            ) == 0
        ) {
            TransferHelper.safeApprove(
                swapThis,
                address(RubiconMarketAddr),
                2**256 - 1
            );
        }
        uint256 amount = RubiconMarket(RubiconMarketAddr).sellAllAmount(
            ERC20(swapThis),
            amountIn,
            ERC20(forThis),
            minFillAmt
        );
        return amount;
    }

    // ** Arbitrage Functions **
    // TODO: below are experimental
    // Takes inputs of fairPrice, hurdleAmount
    function buyUniFirst(
        address asset, //asset of the arb trade
        uint256 asset_amt,
        address quote,
        // uint256 fairPrice,
        uint256 hurdleAmount
    ) external {
        // Buy low
        uint256 first_leg_outcome = UNIdump(
            asset_amt,
            asset,
            quote,
            0,
            3000,
            address(this)
        );
        // Sell high
        uint256 second_leg_outcome = RBCNtrade(
            first_leg_outcome,
            quote,
            asset,
            hurdleAmount + asset_amt
        );
        uint256 outcome = second_leg_outcome - asset_amt;
        require(outcome >= hurdleAmount, "didn't clear hurdle rate"); // redundant?
    }

    // Takes inputs of fairPrice, hurdleAmount
    function buyRubiconFirst(
        address asset,
        uint256 asset_amt,
        address quote,
        // uint256 fairPrice,
        uint256 hurdleAmount
    ) external {
        TransferHelper.safeApprove(
            asset,
            address(RubiconMarketAddr),
            2**256 - 1
        );
        // Buy low
        uint256 first_leg_outcome = RubiconMarket(RubiconMarketAddr)
            .sellAllAmount(ERC20(asset), asset_amt, ERC20(quote), hurdleAmount); //last param?
        // Sell high
        uint256 second_leg_outcome = UNIdump(
            first_leg_outcome,
            quote,
            asset,
            0,
            3000,
            address(this)
        );
        uint256 outcome = second_leg_outcome - asset_amt;
        require(outcome >= hurdleAmount, "didn't clear hurdle rate"); // redundant?
    }
}

