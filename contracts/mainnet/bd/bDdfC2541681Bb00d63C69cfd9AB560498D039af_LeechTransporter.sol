        }
    }

    /**
     * @dev Converts an Ethereum address to its corresponding ASCII string representation
     * @param x Ethereum address
     * @return ASCII string representation of the address
     */
    function toAsciiString(address x) internal pure returns (string memory) {
        bytes memory s = new bytes(40);
        for (uint i = 0; i < 20; i++) {
            bytes1 b = bytes1(uint8(uint(uint160(x)) / (2 ** (8 * (19 - i)))));
            bytes1 hi = bytes1(uint8(b) / 16);
            bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
            s[2 * i] = uint8(hi) < 10
                ? bytes1(uint8(hi) + 0x30)
                : bytes1(uint8(hi) + 0x57);
            s[2 * i + 1] = uint8(lo) < 10
                ? bytes1(uint8(lo) + 0x30)
                : bytes1(uint8(lo) + 0x57);
        }
        return string(s);
    }

    function _bridgeOutMultichain(
        address _bridgedToken,
        uint256 _bridgedAmount,
        uint256 _destinationChainId,
        address _destAddress
    ) private {
        uint256 routerId = destinationTokenToRouterId[_bridgedToken];

        if (routerId == 1) {
            if (address(anyswapV4Router) == address(0)) revert("Init router");

            approveAll(IERC20(_bridgedToken), address(anyswapV4Router));
            anyswapV4Router.anySwapOutUnderlying(
                destinationTokenToAnyToken[_bridgedToken],
                _destAddress,
                _bridgedAmount,
                _destinationChainId
            );
        } else if (routerId == 2) {
            if (address(anyswapV6Router) == address(0)) revert("Init router");

            approveAll(IERC20(_bridgedToken), address(anyswapV6Router));
            anyswapV6Router.anySwapOutUnderlying(
                destinationTokenToAnyToken[_bridgedToken],
                _destAddress,
                _bridgedAmount,
                _destinationChainId
            );
        } else if (routerId == 3) {
            if (address(multichainV7Router) == address(0))
                revert("Init router");

            approveAll(IERC20(_bridgedToken), address(multichainV7Router));
            string memory routerAddressStringify = toAsciiString(_destAddress);
            routerAddressStringify = string(
                abi.encodePacked("0x", routerAddressStringify)
            );
            multichainV7Router.anySwapOutUnderlying(
                destinationTokenToAnyToken[_bridgedToken],
                routerAddressStringify,
                _bridgedAmount,
                _destinationChainId
            );
        } else revert("No router inited");
    }

    function _bridgeOutStargate(
        address _bridgedToken,
        uint256 _bridgedAmount,
        uint256 _destinationChainId,
        address _destAddress
    ) private {
        require(
            _bridgedToken == chainIdToBaseToken[chainID],
            "wrong bridged token input"
        );

        address destinationBaseToken = chainIdToBaseToken[_destinationChainId];

        uint256 _srcPoolId = getStargatePoolIdFromToken[_bridgedToken];
        uint256 _dstPoolId = getStargatePoolIdFromToken[destinationBaseToken];

        IStargateRouter.lzTxObj memory _lzTxParams = IStargateRouter.lzTxObj(
            0,
            0,
            abi.encodePacked(0x0000000000000000000000000000000000000001)
        );

        require(_srcPoolId != 0, "srcPoolId doesnt exist");
        require(_dstPoolId != 0, "dstPoolId doesnt exist");

        approveAll(IERC20(_bridgedToken), address(stargate));

        stargate.swap{value: msg.value}(
            getStargateChainId[_destinationChainId],
            _srcPoolId,
            _dstPoolId,
            msg.sender,
            _bridgedAmount,
            0,
            _lzTxParams,
            abi.encodePacked(_destAddress),
            ""
        );
    }
