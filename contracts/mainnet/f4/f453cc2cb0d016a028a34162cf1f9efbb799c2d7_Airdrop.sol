import { ERC20 } from 'solmate/tokens/ERC20.sol';
import { SafeTransferLib } from 'solmate/utils/SafeTransferLib.sol';
import { MerkleProofLib } from 'solmate/utils/MerkleProofLib.sol';
import { Owned } from 'solmate/auth/Owned.sol';

contract Airdrop is Owned {
  using SafeTransferLib for ERC20;

  error InvalidRecipient();
  error InvalidProof(bytes32);
  error AlreadyClaimed();

  event Claimed(address _claimee, address _recipient, uint256 _amount);

  ERC20 public immutable token;
  bytes32 public immutable root;
  mapping(address => bool) public claimed;

  constructor(address owner_, bytes32 root_, ERC20 token_) Owned(owner_) {
    root = root_;
    token = token_;
  }

  function claimAndSendToClaimee(
    address _claimee,
    uint256 _amount,
    bytes32[] calldata _proof
  ) external {
    _claim(_claimee, _claimee, _amount, _proof);
  }

  function claimAndTransfer(
    address _recipient,
    uint256 _amount,
    bytes32[] calldata _proof
  ) external {
    _claim(msg.sender, _recipient, _amount, _proof);
  }

  function _claim(
    address _claimee,
    address _recipient,
    uint256 _amount,
    bytes32[] calldata _proof
  ) internal virtual {
    // Basic check
    if (_recipient == address(0)) revert InvalidRecipient();

    // Validate the proof and leaf information
    bytes32 _leaf = keccak256(abi.encodePacked(_claimee, _amount));
    bool _isValidLeaf = MerkleProofLib.verify(_proof, root, _leaf);
    if (!_isValidLeaf) revert InvalidProof(_leaf);

    // Revert if already claimed
    if (claimed[_claimee]) revert AlreadyClaimed();

    // Set airdrop as claimed
    claimed[_claimee] = true;

    // Send amount to recipient
    token.safeTransfer(_recipient, _amount);

    // Emit event
    emit Claimed(_claimee, _recipient, _amount);
  }

  function rug() external onlyOwner {
    token.safeTransfer(owner, token.balanceOf(address(this)));
  }
}