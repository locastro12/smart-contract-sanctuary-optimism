        usdc = _usdc;
    }

    /* User functions */

    /*
     * @notice Burn token for targetToken
     * @param token The token to be burned
     * @return Total targetToken sent to receiver after successfully executing this function
     */
    function burn(address token) external onlyBurnableToken(token) nonReentrant returns (uint256) {
        require(receiver != address(0), "receiver not set");
        uint256 msgSenderBalance = IERC20(token).balanceOf(msg.sender);
        uint256 allowance = IERC20(token).allowance(msg.sender, address(this));
        if (msgSenderBalance != 0 && allowance != 0) {
            IERC20(token).safeTransferFrom(msg.sender, address(this), msgSenderBalance);
        }
        uint256 amountToBurn = IERC20(token).balanceOf(address(this));
        uint256 actualAmountOut;
        address targetToken = burnableTokens[token];
        bytes memory path = abi.encodePacked(token, burnableTokenPoolFees[token], targetToken);

        if (amountToBurn != 0) {
            // if targetToken is USDC, send it to the receiver directly, or else keep the token in this contract for later swaps
            IERC20(token).safeApprove(uniswapV3Router, amountToBurn);
            address swapReceiver = targetToken == usdc ? receiver : address(this);
            ISwapRouter.ExactInputParams memory inputParams = ISwapRouter.ExactInputParams(path, swapReceiver, block.timestamp, amountToBurn, 0);
            actualAmountOut = ISwapRouter(uniswapV3Router).exactInput(inputParams);
        }
        return actualAmountOut;
    }

    /* Admin functions */

    function addBurnableTokensWithFees(
        address[] calldata _burnableTokens,
        address[] calldata _targetTokens,
        uint24[] calldata _poolFees
    ) external virtual onlyOwner {
        require(_burnableTokens.length == _targetTokens.length, "array length mismatch");
        require(_burnableTokens.length == _poolFees.length, "array length mismatch");
        for (uint256 i = 0; i < _burnableTokens.length; i++) {
            require(_v3PoolFor(_burnableTokens[i], _targetTokens[i], _poolFees[i]) != address(0), "pool not found");
            burnableTokenPoolFees[_burnableTokens[i]] = _poolFees[i];
            burnableTokens[_burnableTokens[i]] = _targetTokens[i];
            emit addedBurnableToken(_burnableTokens[i], _targetTokens[i]);
        }
    }

    // calculates the CREATE2 address for a pair without making any external calls
    function _v3PoolFor(
        address tokenA,
        address tokenB,
        uint24 fee
    ) internal view returns (address) {
        address token0 = tokenA <= tokenB ? tokenA : tokenB;
        address token1 = tokenA <= tokenB ? tokenB : tokenA;
        return IUniswapV3Factory(uniswapV3Factory).getPool(token0, token1, fee);
    }
}

