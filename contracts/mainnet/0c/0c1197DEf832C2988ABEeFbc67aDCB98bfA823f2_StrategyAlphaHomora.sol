    function setLeverage(uint256 _leverage) external {
        require(_leverage>0 && leverage<=500, "Invalid leverage");
        _onlyAuthorizedActors();
        leverage = _leverage;
        exitLiquidity();
        _deposit();
    }

    function setThresholds(
        uint _minHarvestRequired,
        uint _ammCheckThreshold,
        uint _debtRatioThreshold,
        uint _volatilityThreshold,
        uint _slippage) external {
        _onlyAuthorizedActors();
        minHarvestRequired = _minHarvestRequired;
        ammCheckThreshold = _ammCheckThreshold;
        debtRatioThreshold = _debtRatioThreshold;
        volatilityThreshold = _volatilityThreshold;
        require (_slippage<=PRECISION && _slippage>=0, "Invalid slippage");
        slippage = _slippage;
    }

    function setMinHarvestRequired(uint256 _minHarvestRequired) external {
        minHarvestRequired = _minHarvestRequired;
    }

    /// ===== Internal Core Implementations =====

    /// @dev Check if router price matches oracle price        
    function _ammCheck() internal view returns (bool) {
        uint256 ratio = (pairPrice(volatileToken) * PRECISION) / oraclePrice(volatileToken);
        if (ratio < PRECISION) {
            return PRECISION - ratio < ammCheckThreshold;
        } else {
            return ratio - PRECISION < ammCheckThreshold;
        }
    }

    /// @dev Checks that position's debt ratio isn't too high and the token isn't experiencing very high volatility
    /// @dev If volatility check is too high, revert
    /// @dev If debt ratio is too high, withdraw all funds from homora
    function _checkPositionHealth() internal returns (bool healthy) {
        uint currentPrice = pairPrice(volatileToken);
        uint priceChange;
        if (currentPrice>priceAnchor) {
            priceChange = (currentPrice-priceAnchor)*PRECISION/priceAnchor;
        } else {
            priceChange = (priceAnchor-currentPrice)*PRECISION/priceAnchor;
        }
        if (priceChange>volatilityThreshold) {
            revert("Failed volaitlity check");
        }
        (, uint debtRatio,,,,) = heartBeat();
        if (debtRatio>debtRatioThreshold) {
            _decreasePosition(PRECISION);
            return false;
        }
        return true;
    }

   function requireAmmCheckPass() view internal {
        bool ammCheck = _ammCheck();
        require(ammCheck == true, "reason: Oracle Price difference");
    }

    function getGradient(uint priceChange) public view returns (uint) {
        for (uint i = gradientBreakPoints.length-1; i>=0; i--) {
            if (gradientBreakPoints[i]<=priceChange) {
                return gradients[i];
            }
        }
        return 0;
    }

    function updateGradient(uint[] memory _gradients, uint[] memory _gradientBreakPoints) external {
        _onlyAuthorizedActorsOrController();
        require(_gradients.length==_gradientBreakPoints.length, "Invalid input");
        gradients = _gradients;
        gradientBreakPoints = _gradientBreakPoints;
    }

    /// @dev Perform amm check and check if strategy needs rebalancing, returns equity, price change and amount to rebalance by
    /// @return ammCheck Wether router price and oracle price are close to each other
    /// @return debtRatio ratio of collateral and borrow
    /// @return equity equity
    /// @return priceChange price difference between current price and price anchor
    /// @return currentPrice current price of risky asset
    /// @return gradient If greater than 0 strategy needs to be rebalanced by withdrawing this percentage
    function heartBeat()
        public
        view
        returns (
            bool ammCheck,
            uint256 debtRatio,
            uint256 equity,
            uint256 priceChange,
            uint256 currentPrice,
            uint256 gradient
        )
    {
        equity = balanceOfPool();
        // AMM check
        ammCheck = _ammCheck();
        // Calculate debt ratio
        uint256 collateralValue = IBankOP(homoraBank).getCollateralETHValue(positionId);
        if(positionId != 0 && collateralValue>0){
            debtRatio = (IBankOP(homoraBank).getBorrowETHValue(positionId) * PRECISION) / collateralValue;
        }
        
        // Calculate gradient
        currentPrice = pairPrice(volatileToken);
        if (currentPrice >= priceAnchor) {
            priceChange =
                ((currentPrice - priceAnchor) * PRECISION) /
                priceAnchor;
        } else {
            priceChange =
                ((priceAnchor - currentPrice) * PRECISION) /
                priceAnchor;
        }
        if (equity>0) {
            gradient = getGradient(priceChange);
        }
    }

    /// @notice Returns whether funds should be harvested
    function shouldHarvest() public view returns (bool) {
        return getHarvestable()>minHarvestRequired;
    }

    function _setPnl() internal {
        int pnlInt = int(balanceOfPoolInt())+int(stableWithdrawn)-int(stableSupplied);
        pnl = (pnlInt*int(10)**6)/int(10)**ERC20Upgradeable(stableToken).decimals();
    }

    /// @dev invest the amount of want
    /// @notice When this function is called, the controller has already sent want to this
    /// @notice Just get the current balance and then invest accordingly
    function _deposit() internal override {
        int collateralBefore = int(getCollateralSize());
        int balanceBefore = int(balanceOfPool());
        requireAmmCheckPass();
        _swapStableUSDC(USDC);       
        uint256 supplied = IERC20(stableToken).balanceOf(address(this));
        if(supplied == 0) {
            return;
        }
        stableSupplied+=supplied;
        uint borrow_stable; uint borrow_volatile;
        {
            uint256 multiplier = leverage - 100;
            uint256 frac_stable = 100*PRECISION / (leverage + 100);
            uint256 frac_volatile = PRECISION - frac_stable;
            borrow_stable =
                ((supplied * frac_stable * multiplier)/100) / PRECISION;
            uint256 borrow_volatile_in_stable =
                (((supplied * frac_volatile * multiplier)/100) / PRECISION);
            borrow_volatile = borrow_volatile_in_stable * pairPrice(stableToken)/stableDecimals;
        }
        {
            address token0; address token1; uint amt0; uint amt1; uint borrow0; uint borrow1;
            if (isToken0Stable) {
                token0 = stableToken;
                token1 = volatileToken;
                amt0 = supplied;
                amt1 = 0;
                borrow0 = borrow_stable;
                borrow1 = borrow_volatile;
            } else {
                token0 = volatileToken;
                token1 = stableToken;
                amt0 = 0;
                amt1 = supplied;
                borrow0 = borrow_volatile;
                borrow1 = borrow_stable;
            }
            (uint amtSwap, uint amtOut, bool isZeroForOne) = optimalSwap.getOptimalSwapAmt(
                IUniswapV3Pool(lpToken),
                amt0+borrow0,
                amt1+borrow1,
                tickLower,
                tickUpper
            );
            uint min0; uint min1;
            if (isZeroForOne) {
                min0 = (amt0+borrow0-amtSwap)*(PRECISION-slippage)/PRECISION;
                min1 = (amt1+borrow1+amtOut)*(PRECISION-slippage)/PRECISION;
            } else {
                min0 = (amt0+borrow0+amtOut)*(PRECISION-slippage)/PRECISION;
                min1 = (amt1+borrow1-amtSwap)*(PRECISION-slippage)/PRECISION;
            }
            min0 = min0*(PRECISION-slippage)/PRECISION;
            min1 = min1*(PRECISION-slippage)/PRECISION;
            if (positionId==0) {
                positionId = integration.openPosition(
                    spell,
                    IUniswapV3Spell.OpenPositionParams(
                        token0, token1, fee,
                        tickLower, tickUpper,
                        amt0, amt1, borrow0, borrow1,
                        min0, min1,
                        amtSwap, amtOut, isZeroForOne,
                        block.timestamp
                    )
                );
            } else {
                integration.increasePosition(
                    positionId,
                    spell,
                    IUniswapV3Spell.AddLiquidityParams(
                        amt0, amt1,
                        borrow0, borrow1,
                        min0, min1,
                        amtSwap, amtOut, isZeroForOne,
                        block.timestamp
                    )
                );
            }
        }
        emit Deposit(
            collateralBefore,
            int(getCollateralSize())-collateralBefore,
            balanceBefore,
            int(balanceOfPool())-balanceBefore,
            block.number,
            block.timestamp
        );
        _setPnl();
    }

    function _decreasePosition(uint256 gradient) internal returns (uint256) {
        int collateralBefore = int(getCollateralSize());
        int balanceBefore = int(balanceOfPool());
        uint amountWithdrawn;
        requireAmmCheckPass();
        {
            (, , , uint collateralAmount) = IBankOP(homoraBank).getPositionInfo(positionId);
            if(collateralAmount == 0) return 0;
            uint256 stableBalance0 = IERC20(stableToken).balanceOf(address(this));
            (uint256 debt0, uint256 debt1) = getDebts();
            uint256 tokensToWithdraw = (collateralAmount * gradient) / PRECISION;
            uint256 repay0 = (debt0 * gradient) / PRECISION;
            uint256 repay1 = (debt1 * gradient) / PRECISION;
            if (gradient==PRECISION) {
                repay0 = MAX_INT;
                repay1 = MAX_INT;
            }
            uint withdrawn = uint(balanceBefore)*gradient/PRECISION;
            uint minWithdrawn = withdrawn*(PRECISION-slippage)/PRECISION;

            integration.reducePosition(
                positionId,
                spell,
                IUniswapV3Spell.RemoveLiquidityParams(tokensToWithdraw, repay0, repay1, 0, 0, block.timestamp),
                slippage
            );
            amountWithdrawn = IERC20(stableToken).balanceOf(address(this))-stableBalance0;
            require(amountWithdrawn>minWithdrawn, "Failed slippage");
            stableWithdrawn+=amountWithdrawn;
            _setPnl();
        }

        emit Withdraw(
            gradient,
            collateralBefore,
            int(getCollateralSize())-collateralBefore,
            balanceBefore,
            int(balanceOfPool())-balanceBefore,
            block.number,
            block.timestamp
        );
        return amountWithdrawn;
    }
    
    receive() external payable {
    }

    function wrapETH() public {
        _onlyAuthorizedActorsOrController();
        integration.wrapETH();
        if (address(this).balance>0) {
            IWETH(weth).deposit{value:address(this).balance}();
        }
    }

    function withdrawOther(address _asset) external override whenNotPaused returns (uint256 balance) {
        _onlyAuthorizedActorsOrController();
        if (_asset==weth) {
            wrapETH();
        }
        integration.withdrawOther(_asset);
        balance = IERC20Upgradeable(_asset).balanceOf(address(this));
        IERC20Upgradeable(_asset).safeTransfer(controller, balance);
    }

    function _withdrawAll() internal override {
        exitLiquidity();
        _swapStableUSDC(stableToken);        
    }
    
    function _withdrawSome(uint256 amount)
        internal
        override
        returns (uint256 withdrawn)
    {
        if (positionId==0) return (0);
        uint256 equity = balanceOfPool();
        uint256 gradient = (amount * PRECISION) / equity;
        if (gradient>PRECISION) {
            gradient = PRECISION;
        }
        withdrawn = _decreasePosition(gradient);
        _swapStableUSDC(stableToken);
    }

    /// @notice Withdraws all funds from position into stable token and holds them in strategy contract
    function exitLiquidity() public {
        _onlyAuthorizedActorsOrController();
        if (positionId==0) return;
        if (shouldHarvest()) {
            _harvest();
        }
        _decreasePosition(PRECISION);
    }

    function harvest() external {
        uint harvestable = getHarvestable();
        if (harvestable<minHarvestRequired) return;
        _onlyAuthorizedActorsOrController();
        uint balanceBefore = IERC20(stableToken).balanceOf(address(this));
        _harvest();
        uint harvested = IERC20(stableToken).balanceOf(address(this)) - balanceBefore;
        _deposit();
        harvestedRewards+=harvested;
        // Don't want to count harvested usdc towards supplied usdc
        stableSupplied-=harvested;
        _setPnl();
        emit Harvest(harvested);
    }

    function rebalance(uint256 gradient) external {
        _onlyAuthorizedActorsOrController();
        requireAmmCheckPass();
        int collateralBefore = int(getCollateralSize());
        int balanceBefore = int(balanceOfPool());
        bool healthy = _checkPositionHealth();
        if (!healthy) return;
        _decreasePosition(gradient);
        _deposit();
        numRebalances += 1;
        uint currentPrice = pairPrice(volatileToken);
        priceAnchor = priceAnchor*(PRECISION-gradient)/PRECISION + currentPrice*gradient/PRECISION;
        emit RebalanceDone(
            gradient,
            collateralBefore,
            int(getCollateralSize())-collateralBefore,
            balanceBefore,
            int(balanceOfPool())-balanceBefore,
            block.number,
            block.timestamp
        );
    }

    function _harvest() internal {
        requireAmmCheckPass();
        bool healthy = _checkPositionHealth();
        if (!healthy) return;
        integration.harvestFee(positionId, spell, false, slippage);
    }

    function _swapStableUSDC(address tokenIn) internal {
        uint balance = IERC20(tokenIn).balanceOf(address(this));
        if (USDC==stableToken) return;
        if (balance<100) return;
        address tokenOut = tokenIn==USDC?stableToken:USDC;
        uint expectedOut = balance*uint(10)**ERC20Upgradeable(tokenOut).decimals()/uint(10)**ERC20Upgradeable(tokenIn).decimals();
        uint minOut = expectedOut*(PRECISION-slippage)/PRECISION;

        address poolAddress = factory.getPool(stableToken, USDC, 100);
        if (poolAddress==address(0)) {
            poolAddress = factory.getPool(stableToken, USDC, 500);
        }
        if (poolAddress==address(0)) {
            poolAddress = factory.getPool(stableToken, USDC, 3000);
        }
        if (poolAddress==address(0)) {
            poolAddress = factory.getPool(stableToken, USDC, 10000);
        }

        IUniswapV3Pool swapPool = IUniswapV3Pool(poolAddress);
        ISwapRouter(router).exactInputSingle(
        ISwapRouter.ExactInputSingleParams(tokenIn, tokenOut, swapPool.fee(), address(this), block.timestamp, balance, minOut, 0)
        );
        emit SwappingStables(tokenIn, balance);
    }

    function getDebts() public view returns (uint256, uint256) {
        (address[] memory tokens, uint256[] memory debts) = IBankOP(homoraBank).getPositionDebts(positionId);
        if (tokens[0]==lpToken.token0()) {
            return (debts[0], debts[1]);
        } else {
            return (debts[1], debts[0]);
        }
    }

    function getCollateralSize() public view returns (uint256 collateral) {
        (, , , collateral) = IBankOP(homoraBank).getPositionInfo(positionId);
    }

    function getCurrentTick() public view returns (int24 currentTick) {
        IUniswapV3Pool.Slot0 memory slot0 = lpToken.slot0();
        currentTick = slot0.tick;
    }

    function getHarvestable() public view returns (uint harvestable) {
        (uint feeAmt0, uint feeAmt1) = integration.getPendingFees(positionId);
        if (isToken0Stable) {
            harvestable = feeAmt0+feeAmt1*pairPrice(volatileToken)/volatileDecimals;
        } else {
            harvestable = feeAmt1+feeAmt0*pairPrice(volatileToken)/volatileDecimals;
        }
    }

    function getCollateralBorrowValue() public view returns (uint collateralValue, uint borrowValue) {
        borrowValue = IBankOP(homoraBank).getBorrowETHValue(positionId);
        collateralValue = IBankOP(homoraBank).getCollateralETHValue(positionId);
    }

    function getRatio() public view returns (uint) {
        (uint debt0, uint debt1) = getDebts();
        if (isToken0Stable) {
            return (PRECISION*debt0)/(debt0+debt1*pairPrice(volatileToken)/volatileDecimals);
        } else {
            return (PRECISION*debt1)/(debt1+debt0*pairPrice(volatileToken)/volatileDecimals);
        }
    }
}

