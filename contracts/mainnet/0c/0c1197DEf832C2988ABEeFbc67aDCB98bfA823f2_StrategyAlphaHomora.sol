    uint256 public debtRatioThreshold;
    uint256 public volatilityThreshold;
    address public homoraOracle;
    uint[] public gradients;
    uint[] public gradientBreakPoints;
    uint256 PRECISION;
    uint256 MAX_INT;
    bool public isToken0Stable;
    bool public _isStableNotUSDC;
    address public weth;
    
    constructor(
        address _governance,
        address _strategist,
        address _controller,
        address _keeper,
        address _guardian,
        uint256 _leverage,          
        address[] memory config,
        uint[] memory ticks,
        address _vault,
        bool _isToken0Stable
    ){
        __BaseStrategy_init(
            _governance,
            _strategist,
            _controller,
            _keeper,
            _guardian
        );

        PRECISION = 1e12;
        MAX_INT = 2**256 - 1;

        leverage = _leverage;
        ammCheckThreshold = 5*PRECISION / 100;
        debtRatioThreshold = 99 * PRECISION / 100;
        volatilityThreshold = PRECISION; // Don't perform any rebalance or harvest, if volatility is at 100%        
        spell = IUniswapV3Spell(config[0]);
        homoraBank = config[1];
        lpToken = IUniswapV3Pool(config[2]);
        router = config[3];
        homoraOracle=config[4];
        factory = IUniswapV3Factory(ISwapRouter(router).factory());
        fee = lpToken.fee();
        _setTicks(ticks[0], ticks[1]);
        isToken0Stable = _isToken0Stable;
        if(isToken0Stable){
            stableToken = lpToken.token0();            
            volatileToken = lpToken.token1();
        }else{
            stableToken = lpToken.token1();            
            volatileToken = lpToken.token0();
        }
        stableDecimals = uint(10)**ERC20Upgradeable(stableToken).decimals();
        minHarvestRequired = stableDecimals/10; // Require a minimum of 10 cents to harvest
        volatileDecimals = uint(10)**ERC20Upgradeable(volatileToken).decimals();
        rewards = [stableToken, volatileToken];

        depositToken = USDC;
        priceAnchor = pairPrice(volatileToken);

        vault = _vault;
        slippage = PRECISION/50; // TODO: reduce slippage tolerance

        integration = new UniswapV3SpellIntegrationOp(
            IBankOP(homoraBank),
            factory,
            INonfungiblePositionManager(config[5]),
            ISwapRouter(router),
            stableToken
        );

        // Approvals
        // IERC20(stableToken).approve(homoraBank, MAX_INT);
        // IERC20(volatileToken).approve(homoraBank, MAX_INT);
        IERC20(USDC).approve(router, MAX_INT);
        IERC20(stableToken).approve(router, MAX_INT);
        IERC20(volatileToken).approve(router, MAX_INT);
        IERC20(USDC).approve(address(integration), MAX_INT);
        IERC20(stableToken).approve(address(integration), MAX_INT);
        IERC20(volatileToken).approve(address(integration), MAX_INT);

        gradients = [0, 2*PRECISION/10, 4*PRECISION/10, 75*PRECISION/100, PRECISION];
        gradientBreakPoints = [0, (25*PRECISION)/1000, (50*PRECISION)/1000, (75*PRECISION)/1000, (100*PRECISION)/1000];

        _isStableNotUSDC = USDC!=stableToken;
    }

    /// ===== View Functions =====

    // @dev Specify the name of the strategy
    function getName() external virtual pure override returns (string memory) {
        return "LYF-AH-STRATEGY";
    }

    // @dev Specify the version of the Strategy, for upgrades
