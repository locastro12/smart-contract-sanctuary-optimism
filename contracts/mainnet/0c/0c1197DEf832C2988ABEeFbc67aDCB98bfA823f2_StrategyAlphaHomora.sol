        if (sqrtRatioBX96 - sqrtRatioAX96>(2**256-1)/(uint256(liquidity) << FixedPoint96.RESOLUTION)) {
            return (((uint256(liquidity) << FixedPoint96.RESOLUTION)/sqrtRatioBX96)*(sqrtRatioBX96 - sqrtRatioAX96))/sqrtRatioAX96;
