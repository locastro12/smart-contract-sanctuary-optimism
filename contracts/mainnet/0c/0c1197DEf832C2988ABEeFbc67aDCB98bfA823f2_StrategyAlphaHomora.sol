    /// @dev Balance of want-USDC currently held in strategy positions in POOL
    /// This returns the expected closing equity from unwinding the position after
    /// debt repayment
    function balanceOfPoolInt() public view returns (uint256) {
        return integration._getPositionBalance(positionId);
    }

    function getAmounts() public view returns (uint, uint) {
        return integration._getPositionTokens(positionId);
    }

    function balanceOfPool() public view override returns (uint256) {
        uint stableBalance = balanceOfPoolInt();
        if (stableToken!=USDC) {
            return integration._calculateAmountOut(stableToken, USDC, stableBalance);
        }
        return (stableBalance*uint(10)**6)/stableDecimals;
    }

    function oraclePrice(address token) public view returns (uint) {
        uint tokenPrice = IBaseOracle(homoraOracle).getETHPx(token)*uint(10)**ERC20Upgradeable(token).decimals();
        uint stablePrice = IBaseOracle(homoraOracle).getETHPx(stableToken)*stableDecimals;
        return (tokenPrice*stableDecimals)/stablePrice;
    }

    function pairPrice(address token) public view returns (uint) {
        IUniswapV3Pool.Slot0 memory slot0 = lpToken.slot0();
        uint160 sqrtPriceX96 = slot0.sqrtPriceX96;
        if (token==lpToken.token0()) {
            if (uint(sqrtPriceX96)*uint(sqrtPriceX96)>MAX_INT/1e18) {
                return volatileDecimals*(uint(sqrtPriceX96)*uint(sqrtPriceX96)>>(96 * 2));
            } else {
                return (volatileDecimals*uint(sqrtPriceX96)*uint(sqrtPriceX96)>>(96 * 2));
            }
        } else {
            return (stableDecimals*2**192)/(uint(sqrtPriceX96)**2);
        }
    }

    function _setTicks(uint multiplier0, uint multiplier1) internal {
        IUniswapV3Pool.Slot0 memory slot0 = lpToken.slot0();
        uint160 sqrtPriceX96 = slot0.sqrtPriceX96;
        int24 currentTick = TickMath.getTickAtSqrtRatio(sqrtPriceX96);
        uint absTick = currentTick < 0 ? uint(-int(currentTick)) : uint(int(currentTick));
        uint24 tickSpacing = uint24(lpToken.tickSpacing());
        absTick -= absTick % tickSpacing;
        currentTick = currentTick < 0 ? -int24(int(absTick)) : int24(int(absTick));
        tickLower = int24(currentTick - int24(int(multiplier0 * tickSpacing)));
        tickUpper = int24(currentTick + int24(int(multiplier1 * tickSpacing)));
    }

    function setTicks(uint multiplier0, uint multiplier1) external {
        _onlyAuthorizedActors();
        exitLiquidity();
        _setTicks(multiplier0, multiplier1);
        positionId = 0;
        _deposit();
    }

    /// TODO: Removed due to contract size limit
    /// @notice Change reward getter
    /// @notice Can only be changed by governance
    // function setBlueSwanTree(address _blueSwanAddress) external {
