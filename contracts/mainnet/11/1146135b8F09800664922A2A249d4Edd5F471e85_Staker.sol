pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Staker {
    address admin;
    uint public ticketsLeft = 100;
    mapping(address => bool) public ticketHolders;

    uint constant DEPOSIT_AMOUNT = 0.05 ether;
    // April 14th, 2022 - refunds are no longer valid as of a week before the event
    uint constant REFUND_END_TIME = 1649908800;
    // April 22nd, 2022 - admin can recover funds after the event
    uint constant RECOVER_TIME = 1650600000;

    constructor(address _admin) {
        admin = _admin;
    }

    event SpotReserved(address);

    // upon receiving the required amount, a ticket is reserved
    receive() external payable {
        require(msg.value == DEPOSIT_AMOUNT);
        require(ticketsLeft > 0);
        require(!ticketHolders[msg.sender]);

        ticketHolders[msg.sender] = true;
        ticketsLeft--;

        emit SpotReserved(msg.sender);
    }

    event SpotVacated(address);

    // up until a week before the event, ticket holders can get a refund
    function refund() external {
        require(block.timestamp < REFUND_END_TIME);
        require(ticketHolders[msg.sender]);

        ticketHolders[msg.sender] = false;
        ticketsLeft++;

        (bool success, ) = payable(msg.sender).call{ value: DEPOSIT_AMOUNT }("");
        require(success);

        emit SpotVacated(msg.sender);
    }

    event Completed(address);

    // upon course completion, event participants can recover their funds
    function complete(bytes calldata signature) external {
        require(ticketHolders[msg.sender]);
        bytes32 addressHash = keccak256(abi.encodePacked(msg.sender));
        bytes32 messageHash = ECDSA.toEthSignedMessageHash(addressHash);
        address signer = ECDSA.recover(messageHash, signature);
        require(signer == admin);

        ticketHolders[msg.sender] = false;

        (bool success, ) = payable(msg.sender).call{ value: DEPOSIT_AMOUNT }("");
        require(success);

        emit Completed(msg.sender);
    }

    // all participants should recover their funds through complete function
    // any leftover funds can be recovered by the admin the day after the event
    function recoverETH(uint amount) external {
        require(block.timestamp > RECOVER_TIME);
        require(msg.sender == admin);

        (bool success, ) = payable(admin).call{ value: amount }("");
        require(success);
    }

    // this recovery method is here in case of mistakes 
    function recoverERC20(address erc20, uint amount) external {
        require(msg.sender == admin);
                
        IERC20(erc20).transfer(admin, amount);
    }
}

