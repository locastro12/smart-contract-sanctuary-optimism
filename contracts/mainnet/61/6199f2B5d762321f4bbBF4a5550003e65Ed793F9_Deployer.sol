import "./MetaSwap.sol";
import "./Create2Factory.sol";

/**
 * @title Deployer
 */
contract Deployer {
    MetaSwap public immutable metaswap;
    Create2Factory public immutable factory;

    constructor(address _multisigOwner) public {
        MetaSwap _metaswap = new MetaSwap();
        factory = new Create2Factory();

        _metaswap.transferOwnership(_multisigOwner);

        metaswap = _metaswap;
    }
}

