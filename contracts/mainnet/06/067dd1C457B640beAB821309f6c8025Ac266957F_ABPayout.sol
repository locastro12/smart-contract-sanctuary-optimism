     *
     * @param _underlying underlying token address to be deposited
     * @param _amount amount to be deposited
     * @param _dropId drop identifier associated to the royalty payout
     */
    function depositPayout(
        address _underlying,
        uint256 _amount,
        uint256 _dropId
    ) external;

    /**
     * @notice
