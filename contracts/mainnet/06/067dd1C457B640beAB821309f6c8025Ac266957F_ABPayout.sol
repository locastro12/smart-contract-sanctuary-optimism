/// @dev Thrown when the passed parameter is invalid
error INVALID_PARAMETER();

contract ABPayout is ERC2771Recipient, Initializable, AccessControlUpgradeable {
    using SuperTokenV1Library for ISuperToken;

    //     _____ __        __
    //    / ___// /_____ _/ /____  _____
    //    \__ \/ __/ __ `/ __/ _ \/ ___/
    //   ___/ / /_/ /_/ / /_/  __(__  )
    //  /____/\__/\__,_/\__/\___/____/

    /// @dev Store the SuperToken address used to pay royalty for a given drop
    mapping(uint256 => address) public currencyPerDrop;

    /// @dev Address of Anotherblock Registry (used to store data incoming from L1 txs)
    IABRegistry internal AB_REGISTRY;

    /// @dev Address of Anotherblock Vault (used to manage payouts and hold underlying tokens)
    IABVault internal AB_VAULT;

    /// @dev Biconomy Trusted Forwarder address
    address public trustedForwarder;

    /// @dev Relay role
    bytes32 public constant RELAY_ROLE = keccak256('RELAY_ROLE');

    /// @dev Payout Manager role
    bytes32 public constant VAULT_ROLE = keccak256('VAULT_ROLE');

    /// @dev Manual Updater role
    bytes32 public constant MANUAL_UPDATER_ROLE =
        keccak256('MANUAL_UPDATER_ROLE');

    uint256 public constant IDA_UNITS_PRECISION = 1000;

    /// @dev Storage gap used for future upgrades (30 * 32 bytes)
    uint256[30] __gap;

    /// @dev Event emitted on claim call
    event Claimed(address user, uint256 amount, uint256 dropId);

    //     ______                 __                  __
    //    / ____/___  ____  _____/ /________  _______/ /_____  _____
    //   / /   / __ \/ __ \/ ___/ __/ ___/ / / / ___/ __/ __ \/ ___/
    //  / /___/ /_/ / / / (__  ) /_/ /  / /_/ / /__/ /_/ /_/ / /
    //  \____/\____/_/ /_/____/\__/_/   \__,_/\___/\__/\____/_/

    /**
     * @notice
     *  Contract Constructor
     */
    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    /**
     * @notice
     *  Contract Initializer
     *
     * @param _dropQty Quantity of existing drops before deploying this contract
     * @param _relay Anotherblock Relay contract address
     * @param _registry Anotherblock Registry contract address
     * @param _vault Anotherblock Vault contract address
     * @param _currencyPayout Payout Currency for existing drops
     * @param _forwarder Biconomy Forwarder contract address
     */
    function initialize(
        uint256 _dropQty,
        address _relay,
        address _registry,
        address _vault,
        address _currencyPayout,
        address _forwarder
    ) public initializer {
        // Ensure passed addresses are not zero-address
        if (
            _relay == address(0) ||
            _registry == address(0) ||
            _vault == address(0) ||
            _currencyPayout == address(0) ||
            _forwarder == address(0)
        ) revert INVALID_PARAMETER();

        // Assign address to the interfaces
        AB_REGISTRY = IABRegistry(_registry);
        AB_VAULT = IABVault(_vault);

        _initPreviousDrops(_dropQty, _currencyPayout);

        trustedForwarder = _forwarder;

        // Set Biconomy Trusted Forwarder
        _setTrustedForwarder(_forwarder);

        // Initialize Access Control
        __AccessControl_init();

        // Setup the different roles
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(RELAY_ROLE, _relay);
        _grantRole(VAULT_ROLE, _vault);
    }

    //     ______     __                        __   ______                 __  _
    //    / ____/  __/ /____  _________  ____ _/ /  / ____/_  ______  _____/ /_(_)___  ____  _____
    //   / __/ | |/_/ __/ _ \/ ___/ __ \/ __ `/ /  / /_  / / / / __ \/ ___/ __/ / __ \/ __ \/ ___/
    //  / /____>  </ /_/  __/ /  / / / / /_/ / /  / __/ / /_/ / / / / /__/ /_/ / /_/ / / / (__  )
    // /_____/_/|_|\__/\___/_/  /_/ /_/\__,_/_/  /_/    \__,_/_/ /_/\___/\__/_/\____/_/ /_/____/

    /**
     * @notice
     *  Claim the owed royalties for the given Drop IDs
     *
     * @param _dropIds array containing the Drop IDs to be claimed
     */
    function claimPayouts(uint256[] memory _dropIds) external {
        // Get the sender address
        address sender = _msgSender();

        // Loop through all Drop IDs passed as parameter
        for (uint256 i = 0; i < _dropIds.length; ++i) {
            // Claim payout for the current Drop ID
            _claimPayout(sender, _dropIds[i]);
        }
    }

    //     ____        __         ____       __
    //    / __ \____  / /_  __   / __ \___  / /___ ___  __
    //   / / / / __ \/ / / / /  / /_/ / _ \/ / __ `/ / / /
    //  / /_/ / / / / / /_/ /  / _, _/  __/ / /_/ / /_/ /
    //  \____/_/ /_/_/\__, /  /_/ |_|\___/_/\__,_/\__, /
    //               /____/                      /____/

    /**
     * @notice
     *  Initialize the Superfluid IDA Payout Index for a given Drop
     *  Only Anotherblock Relay contract can perform this operation
     *
     * @param _dropId drop Identifier associated to this index
     * @param _currency currency paid-out for this index
     */
    function initPayoutIndex(
        uint256 _dropId,
        address _currency
    ) external onlyRole(RELAY_ROLE) {
        currencyPerDrop[_dropId] = _currency;
        ISuperToken payoutToken = ISuperToken(_currency);

        payoutToken.createIndex(uint32(_dropId));
    }

    /**
     * @notice
     *  Update the subscription units for the previous holder and the new holder
     *  Only Anotherblock Relay contract can perform this operation
     *
     * @param _previousHolder previous holder address
     * @param _newHolder new holder address
     * @param _dropId associated Drop ID corresponding to the token transferred
     * @param _quantity amount of token transferred
     */
    function updatePayout(
        address _previousHolder,
        address _newHolder,
        uint256 _dropId,
        uint256 _quantity
    ) external onlyRole(RELAY_ROLE) {
        // Remove `_quantity` of `_dropId` shares from `_previousHolder`
        _loseShare(_previousHolder, _dropId, _quantity * IDA_UNITS_PRECISION);

        // Add `_quantity` of `_dropId` shares to `_newHolder`
        _gainShare(_newHolder, _dropId, _quantity * IDA_UNITS_PRECISION);
    }

    //     ____        __         _    __            ____
    //    / __ \____  / /_  __   | |  / /___ ___  __/ / /_
    //   / / / / __ \/ / / / /   | | / / __ `/ / / / / __/
    //  / /_/ / / / / / /_/ /    | |/ / /_/ / /_/ / / /_
    //  \____/_/ /_/_/\__, /     |___/\__,_/\__,_/_/\__/
    //               /____/

    /**
     * @notice
     *  Distribute the royalty for the given Drop ID
     *  Only Anotherblock Vault contract can perform this operation
     *
     * @param _dropId drop Identifier associated to this index
     * @param _amount amount to be paid-out
     */
    function distribute(
        uint256 _dropId,
        uint256 _amount
    ) external onlyRole(VAULT_ROLE) {
        // Get the payout token address
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Calculate the amount to be distributed
        (uint256 actualDistributionAmount, ) = payoutToken
            .calculateDistribution(address(this), uint32(_dropId), _amount);

        // Distribute the token according to the calculated amount
        payoutToken.distribute(uint32(_dropId), actualDistributionAmount);
    }

    //     ____        __         ____
    //    / __ \____  / /_  __   / __ \_      ______  ___  _____
    //   / / / / __ \/ / / / /  / / / / | /| / / __ \/ _ \/ ___/
    //  / /_/ / / / / / /_/ /  / /_/ /| |/ |/ / / / /  __/ /
    //  \____/_/ /_/_/\__, /   \____/ |__/|__/_/ /_/\___/_/
    //               /____/

    /**
     * @notice
     *  Recalculate the units held for each `_subscribers` addresses
     *  Only EOA with role MANUAL_UPDATER_ROLE can perform this operation
     *
     * @param _subscribers addresses to be refreshed
     * @param _dropIds drop identifiers
     */
    function refreshSubscribers(
        address[] memory _subscribers,
        uint256[] memory _dropIds
    ) external onlyRole(MANUAL_UPDATER_ROLE) {
        // Loop through all the given users (subscribers)
        for (uint256 i = 0; i < _subscribers.length; ++i) {
            // Ensure subscriber address is not zero-address
            if (_subscribers[i] != address(0)) {
                // Loop through all Drop IDs
                for (uint256 j = 0; j < _dropIds.length; ++j) {
                    // Get the payout token address for the current Drop ID
                    ISuperToken payoutToken = ISuperToken(
                        currencyPerDrop[_dropIds[j]]
                    );

                    // Get the subscriber's current units
                    (, , uint256 currentUnitsHeld, ) = payoutToken
                        .getSubscription(
                            address(this),
                            uint32(_dropIds[j]),
                            _subscribers[i]
                        );

                    // Get the subscriber's AB NFT balance for the current Drop ID
                    uint256 balance = AB_REGISTRY.getUserBalancePerDrop(
                        _subscribers[i],
                        _dropIds[j]
                    );
                    if (balance > 0) {
                        // Update the subscription units based on user AB NFT balance
                        payoutToken.updateSubscriptionUnits(
                            uint32(_dropIds[j]),
                            _subscribers[i],
                            uint128(balance * IDA_UNITS_PRECISION)
                        );
                    } else if (balance == 0 && currentUnitsHeld > 0) {
                        // Delete the subscription units
                        payoutToken.deleteSubscription(
                            address(this),
                            uint32(_dropIds[j]),
                            _subscribers[i]
                        );
                    }
                }
            }
        }
    }

    /**
     * @notice
     *  Claim the owed royalties for the given Drop IDs on behalf of the user
     *  Only EOA with role MANUAL_UPDATER_ROLE can perform this operation
     *
     * @param _user address of the user to be claimed for
     * @param _dropIds array containing the Drop IDs to be claimed
     */
    function claimPayoutsOnBehalf(
        address _user,
        uint256[] memory _dropIds
    ) external onlyRole(MANUAL_UPDATER_ROLE) {
        // Loop through all Drop IDs passed as parameter
        for (uint256 i = 0; i < _dropIds.length; ++i) {
            // Claim payout for the current Drop ID
            _claimPayout(_user, _dropIds[i]);
        }
    }

    /**
     * @notice
     *  Claim the owed royalties for the given Drop IDs on behalf of the user
     *  Only EOA with role MANUAL_UPDATER_ROLE can perform this operation
     *
     * @param _users array containing the users addresses to be claimed for
     * @param _dropIds array containing the Drop IDs to be claimed
     */
    function claimPayoutsOnMultipleBehalf(
        address[] memory _users,
        uint256[] memory _dropIds
    ) external onlyRole(MANUAL_UPDATER_ROLE) {
        // Loop through all users passed as parameter
        for (uint256 i = 0; i < _users.length; ++i) {
            // Loop through all Drop IDs passed as parameter
            for (uint256 j = 0; j < _dropIds.length; ++j) {
                // Claim payout for the current Drop ID
                _claimPayout(_users[i], _dropIds[j]);
            }
        }
    }

    /**
     * @notice
     *  Set Trusted Forwarder contract address
     *  Only the contract owner can perform this operation
     *
     * @param _forwarder Biconomy Trusted Forwarder contract address
     */
    function setTrustedForwarder(
        address _forwarder
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        trustedForwarder = _forwarder;
        _setTrustedForwarder(_forwarder);
    }

    //   _    ___                 ______                 __  _
    //  | |  / (_)__ _      __   / ____/_  ______  _____/ /_(_)___  ____  _____
    //  | | / / / _ \ | /| / /  / /_  / / / / __ \/ ___/ __/ / __ \/ __ \/ ___/
    //  | |/ / /  __/ |/ |/ /  / __/ / /_/ / / / / /__/ /_/ / /_/ / / / (__  )
    //  |___/_/\___/|__/|__/  /_/    \__,_/_/ /_/\___/\__/_/\____/_/ /_/____/

    /**
     * @notice
     *  Get the user amount of subscription units
     *
     * @param _dropId drop ID to be queried
     * @param _user user address to be queried
     *
     * @return : number of units held by the user for the given Drop ID
     */
    function getUserSubscription(
        uint256 _dropId,
        address _user
    ) external view returns (uint256) {
        // Get the payout token address for the given `_dropId`
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Get the subscriber's current units
        (, , uint256 currentUnitsHeld, ) = payoutToken.getSubscription(
            address(this),
            uint32(_dropId),
            _user
        );
        return currentUnitsHeld;
    }

    /**
     * @notice
     *  Get the amount of royalty to be claimed by the user
     *
     * @param _dropId drop ID to be queried
     * @param _user user address to be queried
     *
     * @return : amount of royalty to be claimed by the user for the given Drop ID
     */
    function getClaimableAmount(
        uint256 _dropId,
        address _user
    ) external view returns (uint256) {
        // Get the payout token address for the given `_dropId`
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Get the subscriber's pending amount to be claimed
        (, , , uint256 pendingDistribution) = payoutToken.getSubscription(
            address(this),
            uint32(_dropId),
            _user
        );
        return pendingDistribution;
    }

    /**
     * @notice
     *  Query the data of a index
     *
     * @param _dropId drop identifier
     * @return indexValue Value of the current index
     * @return totalUnitsApproved Total units approved for the index
     * @return totalUnitsPending Total units pending approval for the index
     */
    function getIndexInfo(
        uint256 _dropId
    )
        external
        view
        returns (
            uint128 indexValue,
            uint128 totalUnitsApproved,
            uint128 totalUnitsPending
        )
    {
        // Get the payout token address for the given `_dropId`
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        (, indexValue, totalUnitsApproved, totalUnitsPending) = payoutToken
            .getIndex(address(this), uint32(_dropId));
    }

    //     ____      __                        __   ______                 __  _
    //    /  _/___  / /____  _________  ____ _/ /  / ____/_  ______  _____/ /_(_)___  ____  _____
    //    / // __ \/ __/ _ \/ ___/ __ \/ __ `/ /  / /_  / / / / __ \/ ___/ __/ / __ \/ __ \/ ___/
    //  _/ // / / / /_/  __/ /  / / / / /_/ / /  / __/ / /_/ / / / / /__/ /_/ / /_/ / / / (__  )
    // /___/_/ /_/\__/\___/_/  /_/ /_/\__,_/_/  /_/    \__,_/_/ /_/\___/\__/_/\____/_/ /_/____/

    /**
     * @notice
     *  Initialize the payout index for the drops created before this contract deployment
     *
     * @param _dropQty Amount of drops created before this contract deployment
     * @param _currency SuperToken address used for payouts of these drops
     */
    function _initPreviousDrops(uint256 _dropQty, address _currency) internal {
        ISuperToken payoutToken = ISuperToken(_currency);

        for (uint256 dropId = 1; dropId <= _dropQty; ++dropId) {
            currencyPerDrop[dropId] = _currency;
            payoutToken.createIndex(uint32(dropId));
        }
    }

    /**
     * @notice
     *  Add subscription units to the subscriber
     *
     * @param _subscriber subscriber address
     * @param _dropId associated drop identifier
     * @param _units amount of units to add
     */
    function _gainShare(
        address _subscriber,
        uint256 _dropId,
        uint256 _units
    ) internal {
        // Ensure subscriber address is not zero-address
        if (_subscriber == address(0)) return;

        // Get the payout token address for the given `_dropId`
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Get the subscriber's current units
        (, , uint256 currentUnitsHeld, ) = payoutToken.getSubscription(
            address(this),
            uint32(_dropId),
            _subscriber
        );

        // Add `_units` to the subscriber current units amount
        payoutToken.updateSubscriptionUnits(
            uint32(_dropId),
            _subscriber,
            uint128(currentUnitsHeld + _units)
        );
    }

    /**
     * @notice
     *  Remove subscription units from the subscriber
     *
     * @param _subscriber subscriber address
     * @param _dropId associated drop identifier
     * @param _units amount of units to remove
     */
    function _loseShare(
        address _subscriber,
        uint256 _dropId,
        uint256 _units
    ) internal {
        // Ensure subscriber address is not zero-address
        if (_subscriber == address(0)) return;

        // Get the payout token address for the given `_dropId`
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Get the subscriber's current units
        (, , uint256 currentUnitsHeld, ) = payoutToken.getSubscription(
            address(this),
            uint32(_dropId),
            _subscriber
        );

        // Check if the new amount of units is null
        if (currentUnitsHeld - _units <= 0) {
            // Delete the user's subscription
            payoutToken.deleteSubscription(
                address(this),
                uint32(_dropId),
                _subscriber
            );
        } else {
            // Remove `_units` from the subscriber current units amount
            payoutToken.updateSubscriptionUnits(
                uint32(_dropId),
                _subscriber,
                uint128(currentUnitsHeld - _units)
            );
        }
    }

    /**
     * @notice
     *  Claim the user's owed royalties for the given Drop IDs
     *
     * @param _user user address
     * @param _dropId drop identifier to be claimed
     */
    function _claimPayout(address _user, uint256 _dropId) internal {
        // Get Payout Token associated to the drop ID
        ISuperToken payoutToken = ISuperToken(currencyPerDrop[_dropId]);

        // Claim the distributed Tokens
        payoutToken.claim(address(this), uint32(_dropId), _user);

        // Get the underlying asset corresponding to the payout token
        address underlying = IABVault(AB_VAULT).getUnderlying(
            address(payoutToken)
        );

        // Get the user balance of payout token
        uint256 amount = payoutToken.balanceOf(_user);

        // Withdraw the underlying asset from the vault and transfer it to the sender
        AB_VAULT.withdraw(underlying, _user, amount);

        emit Claimed(_user, amount, _dropId);
    }

    /**
     * @notice
     *  Return the transaction sender address
     *
     */
    function _msgSender()
        internal
        view
        override(ContextUpgradeable, ERC2771Recipient)
        returns (address)
    {
        return ERC2771Recipient._msgSender();
    }

    /**
     * @notice
     *  Return the transaction data
     *
     */
    function _msgData()
        internal
        view
        override(ContextUpgradeable, ERC2771Recipient)
        returns (bytes calldata ret)
    {
        return ERC2771Recipient._msgData();
    }
}

