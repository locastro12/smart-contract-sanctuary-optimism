pragma solidity 0.8.9;




interface IPolynomialVault {
    function initiateDeposit(address user, uint256 amount) external;
}

contract PolynomialZap is Auth, ReentrancyGuard {
    using SafeTransferLib for ERC20;

    address public constant ETH = 0xEeeeeEeeeEeEeeEeEeEeeEEEeeeeEeeeeeeeEEeE;

    mapping(address => bool) approved;

    constructor() Auth(msg.sender, Authority(address(0x0))) {}

    function swapAndDeposit(
        address user,
        address token,
        address depositToken,
        address swapTarget,
        address vault,
        uint256 amount,
        bytes memory swapData
    ) external payable nonReentrant {
        require(approved[swapTarget]);
        uint256 msgValue;

        if (token == ETH) {
            msgValue = address(this).balance;
            require(msgValue == amount, "INVALID_BALANCE");
        } else {
            ERC20(token).safeTransferFrom(msg.sender, address(this), amount);
            ERC20(token).safeApprove(swapTarget, amount);
        }

        (bool success, ) = swapTarget.call{value: msgValue}(swapData);
        require(success, "SWAP_FAILED");

        uint256 depositAmount = ERC20(depositToken).balanceOf(address(this));
        require(depositAmount > 0);
        ERC20(depositToken).approve(vault, depositAmount);
        IPolynomialVault(vault).initiateDeposit(user, depositAmount);

        emit Zap(
            user,
            token,
            depositToken,
            swapTarget,
            vault,
            amount,
            depositAmount
        );
    }

    function toggleApprove(address target) external requiresAuth {
        bool isApproved = approved[target];
        approved[target] = !isApproved;
    }

    event Zap(
        address user,
        address token,
        address depositToken,
        address swapTarget,
        address vault,
        uint256 amount,
        uint256 depositAmount
    );
}