pragma solidity 0.8.9;



interface IPolynomialVault {
    function initiateDeposit(address user, uint256 amount) external;
    function initiateWithdrawal(address user, uint256 tokens) external;
    function processWithdrawalQueue(uint256 idCount) external;

    function getLiveStrikes() external view returns (uint256[] memory);
    function VAULT_TOKEN() external view returns (ERC20);
}

contract Migrator is ReentrancyGuard {
    using SafeTransferLib for ERC20;

    ERC20 public immutable SUSD;
    ERC20 public immutable SETH;
    IPolynomialVault public immutable oldCS;
    IPolynomialVault public immutable newCS;
    IPolynomialVault public immutable oldPS;
    IPolynomialVault public immutable newPS;

    constructor(
        ERC20 _susd,
        ERC20 _seth,
        IPolynomialVault _oldCS,
        IPolynomialVault _newCS,
        IPolynomialVault _oldPS,
        IPolynomialVault _newPS
    ) {
        SUSD = _susd;
        SETH = _seth;
        oldCS = _oldCS;
        newCS = _newCS;
        oldPS = _oldPS;
        newPS = _newPS;
    }

    function migrateCS() external nonReentrant {
        uint256[] memory liveStrikes = oldCS.getLiveStrikes();
        require(liveStrikes.length == 0);

        ERC20 vaultToken = oldCS.VAULT_TOKEN();

        uint256 balance = vaultToken.balanceOf(msg.sender);
        vaultToken.safeTransferFrom(msg.sender, address(this), balance);

        uint256 preWithdrawSethBal = SETH.balanceOf(address(this));
        oldCS.initiateWithdrawal(address(this), balance);
        oldCS.processWithdrawalQueue(10);
        uint256 postWithdrawSethBal = SETH.balanceOf(address(this));

        require(postWithdrawSethBal > preWithdrawSethBal);

        uint256 sethToDeposit = postWithdrawSethBal - preWithdrawSethBal;
        SETH.safeApprove(address(newCS), sethToDeposit);
        newCS.initiateDeposit(msg.sender, sethToDeposit);
    }

    function migratePS() external nonReentrant {
        uint256[] memory liveStrikes = oldPS.getLiveStrikes();
        require(liveStrikes.length == 0);

        ERC20 vaultToken = oldPS.VAULT_TOKEN();

        uint256 balance = vaultToken.balanceOf(msg.sender);
        vaultToken.safeTransferFrom(msg.sender, address(this), balance);

        uint256 preWithdrawSethBal = SUSD.balanceOf(address(this));
        oldPS.initiateWithdrawal(address(this), balance);
        uint256 postWithdrawSethBal = SUSD.balanceOf(address(this));

        require(postWithdrawSethBal > preWithdrawSethBal);

        uint256 susdToDeposit = postWithdrawSethBal - preWithdrawSethBal;
        SUSD.safeApprove(address(newPS), susdToDeposit);
        newPS.initiateDeposit(msg.sender, susdToDeposit);
    }
}