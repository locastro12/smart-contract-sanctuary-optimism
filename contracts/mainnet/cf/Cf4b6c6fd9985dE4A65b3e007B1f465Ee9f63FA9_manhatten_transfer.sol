import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC777/IERC777.sol";



contract manhatten_transfer is Ownable {


    IERC777            public           token;
    uint256            public           minimum_value;

    constructor(IERC777 _token, uint256 _min) {
        token         = _token;
        minimum_value = _min;

    }

    function transfer(address recipient,uint256 amount) external payable {
        bytes memory data;
        bytes memory operatorData;
        require (
            token.balanceOf(msg.sender) >= amount,
            "You do not have enough tokens"
        );
        require (
            token.isOperatorFor(address(this), msg.sender),
            "authorizeOperator : You have not set this contract as an operator"
        );
        token.operatorSend(msg.sender, recipient, amount, data, operatorData);
        if (msg.value > 0) {
            (bool sent, ) = recipient.call{value: msg.value}(""); // don't use send or xfer (gas)
            require(sent, "Failed to send Value");
        }
    }

    function setMinValue(uint256 _min) external onlyOwner {
        minimum_value = _min;
    }

    function recommended_value(address recipient) external view returns(uint256) {
        uint256 bal = recipient.balance;
        if (bal < minimum_value) {
            return minimum_value - bal;
        }
        return 0;
    }

}

