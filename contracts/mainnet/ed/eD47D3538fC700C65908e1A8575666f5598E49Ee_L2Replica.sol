pragma solidity ^0.8.12;

import "@openzeppelin/contracts/utils/Strings.sol";
import {PRBMathUD60x18} from "@prb/math/contracts/PRBMathUD60x18.sol";

import "../lib/facet/ERC721Facet.sol";
import "../lib/storage/ReplicaTokenStorage.sol";
import "../lib/storage/L2ReplicaTokenStorage.sol";
import "./interface/IHomageProtocolConfig.sol";
import "./interface/IL2EventLogger.sol";
import "./interface/IL2Replica.sol";
import "./interface/IHomageToken.sol";
import "./interface/IRemintProceedsTreasury.sol";
import "./abstract/HomageProtocolConfigViewer.sol";

contract L2Replica is IL2Replica, ERC721Facet, HomageProtocolConfigViewer {
    using PRBMathUD60x18 for uint256;

    function initialize(
        address homageProtocolConfig_,
        address originalTokenContract_,
        uint256 originalTokenId_
    ) external override initializer {
        require(
            originalTokenContract_ != address(0),
            "Cannot create Replica of null address"
        );

        // Store reference to protocol config
        _setHomageProtocolConfig(homageProtocolConfig_);

        // Store reference to original token contract and token ID
        ReplicaTokenStorage
            .get()
            .originalTokenContract = originalTokenContract_;
        ReplicaTokenStorage.get().originalTokenId = originalTokenId_;
    }

    modifier onlyL2TokenClaimBridge() {
        address l2TokenClaimBridge = _l2TokenClaimBridge();

        require(
            l2TokenClaimBridge != address(0) &&
                msg.sender == l2TokenClaimBridge,
            "Message sender must be L2TokenClaimBridge"
        );
        _;
    }

    modifier onlyIfAuthenticated() {
        require(
            L2ReplicaTokenStorage.get().authenticated,
            "Remints not authenticated"
        );

        _;
    }

    /**
     * State Changing Functions
     */
    function mintReplica(
        address to_,
        address mintAttributedTo_,
        address refundRecipient_
    ) external payable override returns (uint256 replicaTokenId) {
        uint256 mintPrice = getMintPrice();

        require(msg.value >= mintPrice, "Must send at least mint cost");
        require(
            mintAttributedTo_ != address(0),
            "Mint attributed to cannot be zero address"
        );
        require(
            refundRecipient_ != address(0),
            "Refund recipient cannot be zero address"
        );

        L2ReplicaTokenStorage.Struct
            storage l2ReplicaTokenStorage = L2ReplicaTokenStorage.get();

        // Increment this NFT contract's tokenIdCounter, then set it as replicaTokenId
        replicaTokenId = ++l2ReplicaTokenStorage.tokenIdCounter;

        IRemintProceedsTreasury(_remintProceedsTreasury()).depositProceeds{
            value: mintPrice
        }(
            ReplicaTokenStorage.get().originalTokenContract,
            ReplicaTokenStorage.get().originalTokenId
        );

        // Mint HOMAGE rewards
        IHomageToken(_homageToken()).mint(_homageProtocolTeam(), mintPrice);
        IHomageToken(_homageToken()).mint(mintAttributedTo_, mintPrice);

        IL2EventLogger(_l2EventLogger()).emitReplicaMinted(
            to_,
            ReplicaTokenStorage.get().originalTokenContract,
            ReplicaTokenStorage.get().originalTokenId,
            replicaTokenId,
            mintPrice
        );

        // Refund surplus value
        uint256 refund = msg.value - mintPrice;
        if (refund > 0) {
            (bool sent, ) = refundRecipient_.call{value: refund}("");
            require(sent, "Failed to refund surplus value");
        }

        _safeMint(to_, replicaTokenId);
    }

    function markAsAuthentic() external override onlyL2TokenClaimBridge {
        require(
            !L2ReplicaTokenStorage.get().authenticated,
            "Replicas already authenticated"
        );

        L2ReplicaTokenStorage.get().authenticated = true;

        IL2EventLogger(_l2EventLogger()).emitMarkReplicasAsAuthentic(
            ReplicaTokenStorage.get().originalTokenContract,
            ReplicaTokenStorage.get().originalTokenId
        );
    }

    /**
     * View Functions
     */

    function remintNumber(uint256 replicaTokenId_)
        external
        view
        override
        returns (uint256)
    {
        // Require that the replica token exists
        ERC721Facet.ownerOf(replicaTokenId_);

        return replicaTokenId_;
    }

    function originalTokenContract() external view override returns (address) {
        return ReplicaTokenStorage.get().originalTokenContract;
    }

    function canonicalTokenId() external view override returns (uint256) {
        return ReplicaTokenStorage.get().originalTokenId;
    }

    function areReplicasMarkedAsAuthentic()
        external
        view
        override
        returns (bool)
    {
        return L2ReplicaTokenStorage.get().authenticated;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        // Require that the replica token exists
        ownerOf(tokenId);

        return
            string.concat(
                "ethereum:",
                Strings.toHexString(
                    ReplicaTokenStorage.get().originalTokenContract
                ),
                "@",
                Strings.toString(l1ChainId()),
                "/tokenURI?tokenId=",
                Strings.toString(ReplicaTokenStorage.get().originalTokenId)
            );
    }

    function name() public view override returns (string memory) {
        return
            string.concat(
                "Remint of ",
                Strings.toHexString(
                    ReplicaTokenStorage.get().originalTokenContract
                ),
                " Token ID ",
                Strings.toString(ReplicaTokenStorage.get().originalTokenId)
            );
    }

    function symbol() public pure override returns (string memory) {
        return "REMINT";
    }

    function getMintPrice() public view override returns (uint256 mintPrice) {
        uint256 numRemints = getNumRemints();

        return getMintPriceFromNumRemints(numRemints);
    }

    function getNumRemints() public view override returns (uint256) {
        return L2ReplicaTokenStorage.get().tokenIdCounter;
    }

    function getMintPriceFromNumRemints(uint256 numRemints_)
        public
        view
        override
        returns (uint256 mintPrice)
    {
        IHomageProtocolConfig homageProtocolConfigContract = IHomageProtocolConfig(
                _homageProtocolConfig()
            );

        uint256 initialMintPrice = homageProtocolConfigContract
            .initialMintPrice();

        uint256 priceInflationMultiplier = homageProtocolConfigContract
            .priceInflationMultiplier();

        return
            initialMintPrice.mul(
                priceInflationMultiplier.pow(
                    PRBMathUD60x18.fromUint(numRemints_)
                )
            );
    }

    function contractURI() external view override returns (string memory) {
        return
            string.concat(
                "https://homage.xyz/api/contract-uri/",
                Strings.toString(block.chainid),
                Strings.toHexString(address(this))
            );
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721Facet)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function l1ChainId() internal view returns (uint256) {
        // Optimism > Mainnet
        if (block.chainid == 10) {
            return 1;
        }

        // Optimism Goerli > Goerli
        if (block.chainid == 420) {
            return 5;
        }

        // Optimism Kovan > Kovan
        if (block.chainid == 69) {
            return 42;
        }

        // Optimism Local > L1 Local
        if (block.chainid == 987) {
            return 31337;
        }

        // Optimism Local > L1 Local (Bedrock)
        if (block.chainid == 901) {
            return 900;
        }

        // Single chain testing
        if (block.chainid == 1337) {
            return 1;
        }

        revert("Deployed to unsupported L2 chain ID");
    }

    function _afterTokenTransfer(
        address,
        address,
        uint256 tokenId
    ) internal override(ERC721Facet) {
        IL2EventLogger(_l2EventLogger()).emitReplicaTransferred(
            ReplicaTokenStorage.get().originalTokenId,
            tokenId
        );
    }
}

