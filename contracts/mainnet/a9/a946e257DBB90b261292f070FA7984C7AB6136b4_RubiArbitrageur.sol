    /// @dev Ensures that arbitrage was profitable
    ///      and transfers `_payGem` if that's the case.
    function _isArbProfitable(
        IERC20 _payGem,
        uint256 _minProfit,
        address _beneficiary
    ) internal {
        uint256 _balance = _payGem.balanceOf(address(this));
        require(_balance > _minProfit, "ERR: MIN PROFIT ISN'T REACHED");
        _payGem.transfer(_beneficiary, _balance);
    }
}