pragma solidity ^0.6.0;

import "@openzeppelin/contracts/utils/Create2.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract Create2Factory {
    using Address for address;

    event Deployed(address indexed deployed);

    function deploy(bytes calldata code) external returns (address deployed) {
        address addr = getAddress(code);
        if (addr.isContract()) {
            return addr;
        }

        deployed = Create2.deploy(0, bytes32(0), code);
        assert(addr == deployed);

        emit Deployed(deployed);
    }

    function getAddress(bytes memory code) public view returns (address) {
        return Create2.computeAddress(bytes32(0), keccak256(code));
    }
}

