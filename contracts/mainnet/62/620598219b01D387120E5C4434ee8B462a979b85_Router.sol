import { IUniswapV3Factory } from "@uniswap/v3-core/contracts/interfaces/IUniswapV3Factory.sol";
import { TransferHelper } from "@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol";
import { IERC20Metadata } from "@perp/curie-contract/contracts/interface/IERC20Metadata.sol";
import { ISwapRouter } from "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import { BytesLib } from "@uniswap/v3-periphery/contracts/libraries/BytesLib.sol";
import { Path } from "@uniswap/v3-periphery/contracts/libraries/Path.sol";
import { SafeOwnable } from "@perp/curie-contract/contracts/base/SafeOwnable.sol";
import { ReentrancyGuardUpgradeable } from "@openzeppelin/contracts-upgradeable/utils/ReentrancyGuardUpgradeable.sol";

import { IRouter } from "./interface/IRouter.sol";
import { RouterStorageV1 } from "./storage/RouterStorage.sol";

contract Router is IRouter, SafeOwnable, ReentrancyGuardUpgradeable, RouterStorageV1 {
    using BytesLib for bytes;
    using Path for bytes;

    //
    // EXTERNAL NON-VIEW
    //

    function initialize(address uniswapV3RouterArg, address uniswapV3FactoryArg) external initializer {
        __SafeOwnable_init();
        __ReentrancyGuard_init();

        _uniswapV3Router = uniswapV3RouterArg;
        _uniswapV3Factory = uniswapV3FactoryArg;
    }

    function setUniswapV3Path(
        address tokenIn,
        address tokenOut,
        bytes calldata path
    ) external onlyOwner {
        _verifyPath(tokenIn, tokenOut, path);

        bytes32 key = _getKey(tokenIn, tokenOut);
        bytes memory oldPath = _uniswapV3PathMap[key];
        _uniswapV3PathMap[key] = path;

        emit UpdateUniswapV3Path(tokenIn, tokenOut, oldPath, path);
    }

    function uniswapV3ExactInput(UniswapV3ExactInputParams memory params)
        external
        override
        nonReentrant
        returns (uint256 amountOut)
    {
        TransferHelper.safeTransferFrom(params.tokenIn, msg.sender, address(this), params.amountIn);

        bytes memory path = _uniswapV3PathMap[_getKey(params.tokenIn, params.tokenOut)];

        // R_PNS: Path Not Set
        require(keccak256(path) != keccak256(bytes("")), "R_PNS");

        IERC20Metadata(params.tokenIn).approve(_uniswapV3Router, params.amountIn);

        return
            ISwapRouter(_uniswapV3Router).exactInput(
                ISwapRouter.ExactInputParams({
                    path: path,
                    recipient: params.recipient, // transfer tokenOut directly to recipient
                    deadline: params.deadline,
                    amountIn: params.amountIn,
                    amountOutMinimum: params.amountOutMinimum
                })
            );
    }

    //
    // EXTERNAL VIEW
    //

    function getUniswapV3Path(address tokenIn, address tokenOut) external view returns (bytes memory) {
        return _uniswapV3PathMap[_getKey(tokenIn, tokenOut)];
    }

    //
    // INTERNAL VIEW
    //

    function _verifyPath(
        address expectedTokenIn,
        address expectedTokenOut,
        bytes memory path
    ) internal view {
        address firstTokenIn = path.toAddress(0);

        // R_ITI: Invalid TokenIn
        require(firstTokenIn == expectedTokenIn, "R_ITI");

        while (true) {
            bool hasMultiplePools = path.hasMultiplePools();
            bytes memory pool = path.getFirstPool();

            (address tokenIn, address tokenOut, uint24 fee) = pool.decodeFirstPool();

            // NOTE: cannot do pool existence check if we're using PoolAddress.computeAddress()
            // PoolAddress.PoolKey memory poolKeys = PoolAddress.getPoolKey(tokenIn, tokenOut, fee);
            // address poolAddress = PoolAddress.computeAddress(_uniswapV3Factory, poolKeys);
            address poolAddress = IUniswapV3Factory(_uniswapV3Factory).getPool(tokenIn, tokenOut, fee);

            // R_PZ: Pool is Zero
            require(poolAddress != address(0), "R_PZ");

            if (hasMultiplePools) {
                path = path.skipToken();
            } else {
                // R_ITO: Invalid TokenOut
                require(tokenOut == expectedTokenOut, "R_ITO");
                break;
            }
        }
    }

    //
    // INTERNAL PURE
    //

    function _getKey(address tokenIn, address tokenOut) internal pure returns (bytes32) {
        return keccak256(abi.encodePacked(tokenIn, tokenOut));
    }
}

