pragma solidity 0.7.4;

import '@uniswap/lib/contracts/libraries/FixedPoint.sol';
import "@openzeppelin/contracts-upgradeable/math/SignedSafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/SafeCastUpgradeable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "../../interface/IOracle.sol";
import "../../libraries/SafeMathExt.sol";


contract UpdateableRateOracleAdaptor is Ownable, IOracle {

    using SafeMathUpgradeable for uint256;
    using SafeCastUpgradeable for int256;
    using SafeCastUpgradeable for uint256;
    using SignedSafeMathUpgradeable for int256;
    using FixedPoint for *;

    event PriceUpdate(int256 newPrice, uint256 indexed timestamp);

    string internal _collateral;
    string internal _underlyingAsset;

    bool internal _isMarketClosed;
    bool internal _isTerminated;
    int256 internal _indexPrice;
    uint256 internal _indexPriceTimestamp;

    // @dev if the time since _indexPriceTimestamp exceeds this threshold, isTerminated will
    //      be true automatically. maxHeartBeat = 0 means no limit
    uint256 public maxHeartBeat;
    uint256 public windowSize;
    uint256 public tickSize;

    uint public immutable maxWindowSize;

    struct Observation {
        uint timestamp;
        uint rate;
        uint rateCumulative;
    }

    mapping(uint256 => Observation) queue;
    uint256 first = 1;
    uint256 last = 0;

    constructor(
        uint maxWindowSize_, string memory collateral_, string memory underlyingAsset_,
        uint windowSize_, uint tickSize_
    ) Ownable() {
        require(tickSize_ <= windowSize_, "tickSize bigger than windowSize");
        maxWindowSize = maxWindowSize_;
        windowSize = windowSize_;
        tickSize = tickSize_;
        _collateral = collateral_;
        _underlyingAsset = underlyingAsset_;
    }

    function clear() external onlyOwner {
        if (last < first) {
            return;
        }
        for (uint i = first; i < last; i++) {
            delete queue[i];
        }
        first = 1;
        last = 0;
    }

    function _enqueue(Observation memory _data) internal {
        last += 1;
        queue[last] = _data;
    }

    function _dequeue() internal {
        require(last >= first);  // non-empty queue
        delete queue[first];
        first += 1;
    }

    function _pruneRates() internal {
        if (last < first) {
            return;
        }
        if (block.timestamp - queue[first].timestamp < maxWindowSize) {
            return;
        }
        uint i = first + 1;
        while (i < last) {
            if (block.timestamp - queue[i].timestamp > maxWindowSize) {
                i = i + 1;
            } else {
                return;
            }
        }
        uint tightFirst = i - 1;
        uint d = first;
        while (d < tightFirst) {
            _dequeue();
            d = d + 1;
        }
    }

    function updateRate(uint256 newRate, uint256 timestamp) external onlyOwner {
        require(timestamp >= queue[last].timestamp, 'time must be after');
        uint newCum = 0;
        if (last >= first) {
            uint timeElapsed = (timestamp - queue[last].timestamp);
            newCum = timeElapsed * queue[last].rate + queue[last].rateCumulative;
        }
        _enqueue(
            Observation(timestamp, newRate, newCum)
        );
        _pruneRates();
        if (last >= first && queue[last].timestamp - queue[first].timestamp >= windowSize) {
            (int256 newPrice, uint256 newTimestamp) = _priceTWAP();
            emit PriceUpdate(newPrice, newTimestamp);
        }
    }


    function _priceTWAP() internal view returns (int256 newPrice, uint256 newTimestamp) {
        require(last >= first);
        uint i = last;
        uint curWindow = 0;
        uint cumRate = 0;
        uint256 curTime = block.timestamp;
        // handles time lag issues.
        if (curTime < queue[i].timestamp) {
            curTime = queue[i].timestamp;
        }
        uint256 lastTick = curTime - queue[i].timestamp;
        if (lastTick < tickSize) {
            curTime += (tickSize - lastTick);
        }
        while (i >= first && curWindow < windowSize) {
            if (curTime - queue[i].timestamp > (windowSize - curWindow)) {
                cumRate += queue[i].rate * (windowSize - curWindow);
                curWindow += (windowSize - curWindow);
                break;
            }
            uint curSpan = (curTime - queue[i].timestamp);
            curTime = queue[i].timestamp;
            cumRate += queue[i].rate * curSpan;
            curWindow += curSpan;
            i-=1;
        }
        require(curWindow == windowSize, "timespan window is wrong");
        newPrice = int256(cumRate.div(windowSize));
        newTimestamp = block.timestamp;
    }

    function setMarketClosed(bool isClosed) external onlyOwner {
        _isMarketClosed = isClosed;
    }

    function setTerminated(bool isTerminated_) external onlyOwner {
        _isTerminated = isTerminated_;
    }

    function setMaxHeartBeat(uint256 maxHeartBeat_) external onlyOwner {
        maxHeartBeat = maxHeartBeat_;
    }

    function setWindowSize(uint256 windowSize_) external onlyOwner {
        require(windowSize_ <= maxWindowSize, "bigger than maxwindow");
        windowSize = windowSize_;
    }

    function setTickSize(uint256 tickSize_) external onlyOwner {
        require(windowSize >= tickSize_, "bigger than maxwindow");
        tickSize = tickSize_;
    }

    function priceTWAPLong()
        external
        view
        override
        returns (int256 newPrice, uint256 newTimestamp)
    {
        return _priceTWAP();
    }

    function priceTWAPShort()
        external
        view
        override
        returns (int256 newPrice, uint256 newTimestamp)
    {
        return _priceTWAP();
    }

    function collateral() external view override returns (string memory) {
        return _collateral;
    }

    function underlyingAsset() external view override returns (string memory) {
        return _underlyingAsset;
    }

    function isMarketClosed() external view override returns (bool) {
        return _isMarketClosed;
    }

    function isTerminated() external override returns (bool) {
        checkHeartStop();
        return _isTerminated;
    }

    function checkHeartStop() public returns (bool) {
        if (maxHeartBeat == 0 || _indexPriceTimestamp == 0) {
            return false;
        }
        if (block.timestamp > _indexPriceTimestamp + maxHeartBeat) {
            _isTerminated = true;
            return true;
        }
        return false;
    }

    function getLatestTimestamp() external view returns(uint256) {
        if(last >= first) {
            return queue[last].timestamp;
        } else {
            return 0;
        }
    }

    function getLatestPrice() external view returns(uint256) {
        if(last >= first) {
            return queue[last].rate;
        } else {
            return 0;
        }
    }
}

