pragma solidity 0.7.6;
pragma abicoder v2;

import { SafeERC20 } from "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import { SafeMath } from "@openzeppelin/contracts/math/SafeMath.sol";

import { CommonArbitrageur } from "./CommonArbitrageur.sol";
import { ICommonVault } from "./interface/ICommonVault.sol";

// 1inch version
contract KtbArbitrageur is CommonArbitrageur {
    using SafeMath for uint256;

    enum ArbitrageType {
        BUY_ON_KTB_SELL_ON_UNI,
        BUY_ON_1INCH_SELL_ON_KTB,
        BUY_ON_UNI_SELL_ON_KTB,
        BUY_ON_KTB_SELL_ON_1INCH
    }

    address internal immutable _oneInchAggregationRouterV5;

    event ArbitrageWithType(
        address kantabanVault,
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        ArbitrageType arbitrageType,
        uint256 profit
    );

    constructor(
        address routerArg,
        address usdcUsdChainlinkAggregatorArg,
        address whitelistedCallerArg,
        address oneInchAggregationRouterV5Arg
    ) CommonArbitrageur(routerArg, usdcUsdChainlinkAggregatorArg, whitelistedCallerArg) {
        _oneInchAggregationRouterV5 = oneInchAggregationRouterV5Arg;
    }

    //
    // EXTERNAL NON-VIEW
    //

    function arbitrage(
        address kantabanVault,
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        ArbitrageType arbitrageType,
        bytes calldata oneInchTxData
    ) external nonReentrant returns (uint256) {
        address msgSender = msg.sender;
        // CA_CAC: caller is a contract
        require(tx.origin == msgSender, "CA_CAC");

        _requireUsdcIsPegged();

        // Transfer tokenIn to here for msg.sender
        _transferTokenIn(tokenIn, msgSender, amountIn);

        uint256 amountOut;
        if (arbitrageType == ArbitrageType.BUY_ON_KTB_SELL_ON_UNI) {
            uint256 amountOutFromKtb = _swapOnKtb(kantabanVault, tokenIn, tokenOut, amountIn);
            amountOut = _swapOnUni(tokenOut, tokenIn, amountOutFromKtb);
        } else if (arbitrageType == ArbitrageType.BUY_ON_1INCH_SELL_ON_KTB) {
            uint256 amountOutFromOneInch = _swapOnOneInch(tokenIn, tokenOut, amountIn, oneInchTxData);
            amountOut = _swapOnKtb(kantabanVault, tokenOut, tokenIn, amountOutFromOneInch);
        } else if (arbitrageType == ArbitrageType.BUY_ON_UNI_SELL_ON_KTB) {
            uint256 amountOutFromUni = _swapOnUni(tokenIn, tokenOut, amountIn);
            amountOut = _swapOnKtb(kantabanVault, tokenOut, tokenIn, amountOutFromUni);
        } else if (arbitrageType == ArbitrageType.BUY_ON_KTB_SELL_ON_1INCH) {
            uint256 amountOutFromKtb = _swapOnKtb(kantabanVault, tokenIn, tokenOut, amountIn);
            amountOut = _swapOnOneInch(tokenOut, tokenIn, amountOutFromKtb, oneInchTxData);
        } else {
            // CA_UAT: unknown arbitrage type
            revert("CA_UAT");
        }

        // CA_NP: no profit
        require(amountOut > amountIn, "CA_NP");

        // return funds to msg.sender
        SafeERC20.safeTransfer(IERC20(tokenIn), msgSender, amountIn);

        // distribute profit to kantabanVault
        uint256 profit = amountOut - amountIn;
        SafeERC20.safeTransfer(IERC20(tokenIn), kantabanVault, profit);

        emit ArbitrageWithType(kantabanVault, tokenIn, tokenOut, amountIn, arbitrageType, profit);

        return profit;
    }

    /// @dev this function is for quoter using, will always revert, do not interact it on-chain
    function revertSwapOnKtb(
        address kantabanVault,
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        address approver
    ) external {
        _transferTokenIn(tokenIn, approver, amountIn);
        uint256 amountOut = _swapOnKtb(kantabanVault, tokenIn, tokenOut, amountIn);

        // 0x40 is the free memory pointer address
        // amountOut is uint256 which is 32 bytes
        assembly {
            let ptr := mload(0x40)
            mstore(ptr, amountOut)
            revert(ptr, 32)
        }
    }

    //
    // EXTERNAL VIEW
    //

    function getOneInchAggregationRouterV5() external view returns (address) {
        return _oneInchAggregationRouterV5;
    }

    //
    // INTERNAL NON-VIEW
    //

    function _swapOnOneInch(
        address tokenIn,
        address tokenOut,
        uint256 amountIn,
        bytes calldata oneInchTxData
    ) internal returns (uint256) {
        IERC20(tokenIn).approve(_oneInchAggregationRouterV5, amountIn);

        uint256 tokenOutBalanceBefore = IERC20(tokenOut).balanceOf(address(this));

        (bool success, ) = _oneInchAggregationRouterV5.call{ value: 0 }(oneInchTxData);
        if (!success) {
            // CA_OSF: 1inch Swap Fail, for instance, due to slippage
            revert("CA_OSF");
        }

        uint256 returnAmount = IERC20(tokenOut).balanceOf(address(this)).sub(tokenOutBalanceBefore);

        return returnAmount;
    }
}

