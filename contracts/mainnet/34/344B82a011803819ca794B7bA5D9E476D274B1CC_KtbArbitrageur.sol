import { IRouter } from "./interface/IRouter.sol";
import { IRouterStruct } from "./interface/IRouterStruct.sol";

abstract contract CommonArbitrageur is SafeOwnableNonUpgradable, ReentrancyGuard {
    using PerpMath for int256;

    address internal immutable _router;
    address internal immutable _usdcUsdChainlinkAggregator;
    address internal immutable _whitelistedCaller;
    uint256 internal _maxUsdcDepeggedDeviation;

    event UpdateMaxUsdcDepeggedDeviation(uint256 maxUsdcDepeggedDeviation);

    // EXTERNAL NON-VIEW

    constructor(
        address routerArg,
        address usdcUsdChainlinkAggregatorArg,
        address whitelistedCallerArg
    ) {
        _router = routerArg;
        _usdcUsdChainlinkAggregator = usdcUsdChainlinkAggregatorArg;

        // we only apply this to deleverage(),
        // arbitrage() can still be called by any EOA
        _whitelistedCaller = whitelistedCallerArg;
    }

    // If we consider USDC/USD in the range of [1.003, 0.997] is pegged,
    // we should set _maxUsdcDepeggedDeviation to 0.003e8 = 300000
    function setMaxUsdcDepeggedDeviation(uint256 maxUsdcDepeggedDeviationArg) external onlyOwner {
        // CA_IDDU: invalid depegged deviation USDC
        require(maxUsdcDepeggedDeviationArg < 1e8, "CA_IDDU");
        _maxUsdcDepeggedDeviation = maxUsdcDepeggedDeviationArg;
        emit UpdateMaxUsdcDepeggedDeviation(_maxUsdcDepeggedDeviation);
    }

    function deleverage(address kantabanVault, uint256 reducedPositionSizeAbs)
        external
        nonReentrant
        returns (int256 pnl)
    {
        // CA_IC: Invalid Caller
        require(_msgSender() == _whitelistedCaller, "CA_IC");
        return ICommonVault(kantabanVault).deleverage(reducedPositionSizeAbs);
    }

    // EXTERNAL VIEW

    function getRouter() external view returns (address) {
        return _router;
    }

    function getUsdcUsdChainlinkAggregator() external view returns (address) {
        return _usdcUsdChainlinkAggregator;
    }

    function getMaxUsdcDepeggedDeviation() external view returns (uint256) {
        return _maxUsdcDepeggedDeviation;
    }

    function getWhitelistedCaller() external view returns (address) {
        return _whitelistedCaller;
    }

    // INTERNAL NON-VIEW

    function _swapOnKtb(
        address kantabanVault,
        address tokenIn,
        address tokenOut,
        uint256 amountIn
    ) internal returns (uint256) {
        IERC20(tokenIn).approve(kantabanVault, amountIn);

        return
            ICommonVault(kantabanVault).swapExactInput(
                ICommonVaultStruct.SwapExactInputParams({
                    tokenIn: tokenIn,
                    tokenOut: tokenOut,
                    recipient: address(this),
                    deadline: block.timestamp,
                    amountIn: amountIn,
                    amountOutMinimum: 0, // we require(amountOut > amountIn) in arbitrage(), should be fine to set to 0
                    sqrtPriceLimitX96OnPerp: 0
                })
            );
    }

    function _swapOnUni(
        address tokenIn,
        address tokenOut,
        uint256 amountIn
    ) internal returns (uint256) {
        IERC20(tokenIn).approve(_router, amountIn);

        return
            IRouter(_router).uniswapV3ExactInput(
                IRouterStruct.UniswapV3ExactInputParams({
                    tokenIn: tokenIn,
                    tokenOut: tokenOut,
                    recipient: address(this),
                    deadline: block.timestamp,
                    amountIn: amountIn,
                    amountOutMinimum: 0 // we require(amountOut > amountIn) in arbitrage(), should be fine to set to 0
                })
            );
    }

    function _transferTokenIn(
        address token,
        address from,
        uint256 amount
    ) internal {
        // check for deflationary tokens by assuring balances before and after transferring to be the same
        uint256 balanceBefore = IERC20(token).balanceOf(address(this));
        SafeERC20.safeTransferFrom(IERC20(token), from, address(this), amount);

        uint256 balanceNow = IERC20(token).balanceOf(address(this));

        // CA_IBA: inconsistent balance amount, to prevent from deflationary tokens
        require(balanceNow > balanceBefore && (balanceNow - balanceBefore) == amount, "CA_IBA");
    }

    // INTERNAL VIEW

    function _requireUsdcIsPegged() internal view {
        AggregatorV3Interface chainlinkAggregator = AggregatorV3Interface(_usdcUsdChainlinkAggregator);
        uint8 decimals = chainlinkAggregator.decimals();

        // CA_DC: Decimals Changed
        require(decimals == 8, "CA_DC");

        (, int256 price, , , ) = chainlinkAggregator.latestRoundData();

        // CA_IP: invalid price
        require(price >= 0, "CA_IP");

        // we expect USDC/USD = 1 = 1e8 (Chainlink aggregator decimals is 8)
        // CA_UD: USDC Depegged
        require((1e8 - price).abs() <= _maxUsdcDepeggedDeviation, "CA_UD");
    }
}

