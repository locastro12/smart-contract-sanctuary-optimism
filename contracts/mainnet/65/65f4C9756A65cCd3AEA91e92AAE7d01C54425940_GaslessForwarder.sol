interface IForwarder {

    /// @dev forward validator request
    struct ForwardRequest {
        address validator;
        address targetAddress;
        bytes data;
        address paymentToken;
        uint256 paymentFees;
        uint256 tokenGasPrice;
        uint256 validTo;
        uint256 nonce;
    }

    /// @notice Forwards the request, by validating the signatory.
