    ) public view virtual override(ERC1155Upgradeable, ERC1155URIStorageUpgradeable) returns (string memory _uri) {
        _uri = ERC1155URIStorageUpgradeable.uri(tokenID);
    }

    /// UTILS

    /**
     * @dev Check if value is below max item index
