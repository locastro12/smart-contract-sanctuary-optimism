            !MerkleProofUpgradeable.verifyCalldata(proof, merkleRoots[claimID], leaf) ||
            (minted[claimID] + amount) > maxUnits[claimID]
        ) revert Errors.Invalid();
        hasBeenClaimed[claimID][leaf] = true;

        emit LeafClaimed(claimID, leaf);
    }

